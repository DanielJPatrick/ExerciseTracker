<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dragonfly.exercisetracker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ExerciseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.SplashActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.MainActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".ui.activities.ExerciseActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".ui.activities.VariableActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".ui.activities.DataTypeListActivity"
            android:launchMode="singleTask">
        </activity>
    </application>

</manifest>